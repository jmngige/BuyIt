<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.home.profile.WishlistFragment">

    <com.todkars.shimmer.ShimmerRecyclerView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/wishlist_items_rv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/wishlist_leftGuideline"
        app:layout_constraintEnd_toEndOf="@id/wishlist_rightGuideline"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/wishlist_leftGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".02"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/wishlist_rightGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".98"/>

</androidx.constraintlayout.widget.ConstraintLayout>